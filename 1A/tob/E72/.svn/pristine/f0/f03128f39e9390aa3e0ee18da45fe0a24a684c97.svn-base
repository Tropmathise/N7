package monopoly.cases;
import monopoly.*;
import monopoly.JoueurMonopoly;
import monopoly.TypeCase;
import java.util.*;

/** Case départ
 * @author Thomas
 */

public class Depart extends Case {

    public Depart() {
        super(0,TypeCase.DEPART,"Depart");
    }

    public void actioncase(JoueurMonopoly joueur, Plateau plateau) {
        if(joueur.getPosition().getId()==0){
            joueur.ajouterArgent(400)
            println(joueur.getNom()+ "s'arrete sur la Case Départ, il reçoit donc 400€");
        }
        else {
            joueur.ajouterArgent(200);
            println(joueur.getNom() + "est passé par la case départ, il reçoit 200€");
        }
    }


}