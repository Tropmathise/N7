    /** Retirer de l'argent au joueur
     * @param debit argent débité
     */
    public void retirerArgent(int debit) {
        assert (debit >0);
        this.argent = this.argent - debit;
        if (this.argent<=0) {
            this.aPerdu=true;
        }
    }

