package allumettes;
import java.util.Random;

import javax.swing.plaf.nimbus.NimbusLookAndFeel;

/** La strategie experte consiste à faire gagner l'ordinateur
  * quand il le peut.
  * @author Thomas SADURNI
  * @version 1.1
  */
public class StrategieExperte implements Strategie{

    /** Un nombre aléatoire */
    protected Random alea;

    public StrategieExperte() {
    }

    /** Retourne le nombre d'allumettes
      * @param jeu Jeu
      * @return nombre d'allumettes
      */
    @Override
    public int getPrise(Jeu jeu) {
      assert (jeu != null);
      assert (jeu.getNombreAllumettes() > 0);
      final int n = jeu.getNombreAllumettes();
      if (n%(Jeu.PRISE_MAX+1)==1)  {
        return 1 + this.alea.nextInt(Math.min(Jeu.PRISE_MAX,n));
      }
      else if (n%(Jeu.PRISE_MAX+1)==0){
        return 3;
      }
      else if (n%(Jeu.PRISE_MAX+1)==2){
        return 1;
      }
      else if (n%(Jeu.PRISE_MAX+1)==3){
        return 2;
      }
      else {
        return 0;
      }
    }
}
