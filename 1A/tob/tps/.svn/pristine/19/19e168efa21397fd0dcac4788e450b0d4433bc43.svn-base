package allumettes;
import java.util.Scanner;
import allumettes.*;

/** La strategie huamine consiste Ã  faire jouer un humain.
  * @author Thomas SADURNI
  * @version 1.2
  */
public class StrategieHumaine implements Strategie{

    public StrategieHumaine(){
    }

    @Override
    public int getPrise(Jeu jeu) {
        assert(jeu != null);
        int n = jeu.getNombreAllumettes();
        assert(n>0);
        Scanner scanner = new Scanner(System.in);
        int nb = 0;
        while (nb==0){
            System.out.println("Combien voulez-vous retirer d'allumettes?");
            try {
                nb = scanner.nextInt();
            }
            catch (NumberFormatException e) {
                //System.out.println("Attention, prenez un entier entre 1 et " + jeu.PRISE_MAX + ".");
                System.out.println("Erreur ! Prise invalide : " + nb + "(>" + Math.min(n, NouveauJeu.PRISE_MAX) + ")");
            }
        }
        return nb; 
    }

}
